{
  "name": "ascii-3d-animator",
  "version": "2.0.0",
  "description": "Real-time 3D to ASCII art converter with interactive animations",
  "main": "js/app.js",
  "type": "module",
  "scripts": {
    "start": "python -m http.server 8000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write \"js/**/*.js\" \"*.html\" \"*.css\" \"*.md\"",
    "format:check": "prettier --check \"js/**/*.js\" \"*.html\" \"*.css\" \"*.md\"",
    "validate": "npm run lint && npm run format:check && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zacsluss/ASCII_3D_Animator.git"
  },
  "keywords": [
    "ascii",
    "art",
    "3d",
    "three.js",
    "webgl",
    "animation",
    "graphics",
    "canvas",
    "real-time",
    "interactive"
  ],
  "author": "Zacsluss",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zacsluss/ASCII_3D_Animator/issues"
  },
  "homepage": "https://github.com/Zacsluss/ASCII_3D_Animator#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/jest": "^29.5.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^../lib/three/(.*)$": "<rootDir>/__mocks__/three.js"
    },
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
